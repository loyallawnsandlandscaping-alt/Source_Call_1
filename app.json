
{
  "expo": {
    "name": "Source Call",
    "slug": "source-call",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/final_quest_240x240.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/final_quest_240x240.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sourcecall.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to record drum sessions and enable voice features.",
        "NSCameraUsageDescription": "This app uses the camera for video calling and AI-powered annotations.",
        "NSLocationWhenInUseUsageDescription": "This app uses location for enhanced AI features and analytics."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/final_quest_240x240.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sourcecall.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Source Call to access your microphone for recording drum sessions and voice features."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Source Call to access your camera for video calling and AI annotations."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Source Call to use your location for enhanced AI features."
        }
      ]
    ],
    "scheme": "source-call",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "experiments": {
      "typedRoutes": false
    }
  }
}
